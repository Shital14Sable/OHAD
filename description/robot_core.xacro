<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macro.xacro" />

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    
    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>
    
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- Base Link -->
    <link name = "base_link">
    </link>

    <!-- Chassis Link -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz= "-0.04 0 0"/>
    </joint>

    <link name = "chassis">
        <visual>
            <origin xyz="0.1 0 0.025"/>
            <geometry>
                <box size = "0.2 0.1 0.05"/>
            </geometry>
            <material name = "white"/>
        </visual>
        <collision>
            <origin xyz="0.1 0 0.025"/>
            <geometry>
                <box size = "0.2 0.07 0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.3" x="0.2" y= "0.07" z="0.05">
            <origin  xyz="0.1 0 0.025" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
 
    <!-- Rear Left Wheel Link -->
    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz= "0 0.06 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name = "rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Rear Right Wheel Link -->
    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz= "0 -0.06 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>
    
    <link name = "rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>


    <!-- Front Left Wheel Link -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="front_left_wheel"/>
        <origin xyz= "0.14 0.06 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name = "front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Front Right Wheel Link -->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="front_right_wheel"/>
        <origin xyz= "0.14 -0.06 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>
    
    <link name = "front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
            <material name = "blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius = "0.0325" length = "0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.0325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

</robot>